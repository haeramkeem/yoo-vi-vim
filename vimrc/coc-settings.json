// filepath: ~/.vim/coc-settings.json
{
    "diagnostic":{
        "errorSign": "E",
        "warningSign": "W",
        "infoSign": "I",
        "hintSign": "H"
    },
    "clangd.fallbackFlags": ["-std=c++17"],
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
        }
    }
}
